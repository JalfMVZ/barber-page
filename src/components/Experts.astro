---
const barberos = [
  {
    nombre: "CARLOS MEDINA",
    titulo: "MAESTRO BARBERO",
    descripcion:
      "Especialista en cortes clásicos y modernos, con más de 10 años de experiencia en las mejores barberías.",
    imagen: "/slide1-2.png",
    redes: {
      facebook: "#",
      twitter: "#",
      google: "#",
    },
  },
  {
    nombre: "ROBERTO VEGA",
    titulo: "ESTILISTA EXPERTO",
    descripcion:
      "Experto en estilos contemporáneos y técnicas avanzadas de barbería y cuidado de la barba.",
    imagen: "slide3.png",
    redes: {
      facebook: "#",
      twitter: "#",
      google: "#",
    },
  },
];
---

<section class="py-12 md:py-24 bg-swiss-coffee-50">
  <div class="max-w-7xl mx-auto px-4">
    <!-- Encabezado -->
    <div class="text-center mb-8 md:mb-16">
      <h2 class="text-3xl md:text-5xl font-bold text-shark-900 mb-4 md:mb-6">
        Nuestros Barberos Expertos
      </h2>
      <p class="text-lg md:text-xl text-shark-600 max-w-3xl mx-auto px-4">
        Combinando técnicas tradicionales con estilos modernos, nuestro equipo
        de expertos te brinda el mejor servicio en corte, color y afeitado.
      </p>
    </div>

    <!-- Grid de barberos -->
    <div class="grid gap-8 md:grid-cols-2">
      {
        barberos.map((barbero) => (
          <div class="flex flex-col md:flex-row bg-white rounded-lg overflow-hidden shadow-md">
            <div class="w-full md:w-[400px]">
              <img
                src={barbero.imagen}
                alt={barbero.nombre}
                class="w-full h-[300px] md:h-[400px] object-cover"
              />
            </div>
            <div class="flex-1 p-6 md:p-8 flex flex-col justify-between">
              <div>
                <h3 class="text-xl md:text-2xl font-bold text-shark-900 mb-2">
                  {barbero.nombre}
                </h3>
                <p class="text-kumera-500 font-medium mb-4">{barbero.titulo}</p>
                <p class="text-shark-600 leading-relaxed">
                  {barbero.descripcion}
                </p>
              </div>

              <div class="flex items-center justify-between mt-6">
                <div class="flex gap-4">
                  <a
                    href={barbero.redes.facebook}
                    class="text-shark-400 hover:text-kumera-500 transition-colors"
                  >
                    <svg
                      class="w-5 h-5"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z" />
                    </svg>
                  </a>
                  <a
                    href={barbero.redes.twitter}
                    class="text-shark-400 hover:text-kumera-500 transition-colors"
                  >
                    <svg
                      class="w-5 h-5"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z" />
                    </svg>
                  </a>
                  <a
                    href={barbero.redes.google}
                    class="text-shark-400 hover:text-kumera-500 transition-colors"
                  >
                    <svg
                      class="w-5 h-5"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path d="M7 11v2.4h3.97c-.16 1.029-1.2 3.02-3.97 3.02-2.39 0-4.34-1.979-4.34-4.42 0-2.44 1.95-4.42 4.34-4.42 1.36 0 2.27.58 2.79 1.08l1.9-1.83c-1.22-1.14-2.8-1.83-4.69-1.83-3.87 0-7 3.13-7 7s3.13 7 7 7c4.04 0 6.721-2.84 6.721-6.84 0-.46-.051-.81-.111-1.16h-6.61zm0 0 17 2h-3v3h-2v-3h-3v-2h3v-3h2v3h3v2z" />
                    </svg>
                  </a>
                </div>
                <a
                  href="tel:+1234567890"
                  class="bg-kumera-500 p-3 rounded-full text-white hover:bg-kumera-600 transition-colors"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-5 h-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                    />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
